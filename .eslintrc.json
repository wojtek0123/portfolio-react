{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "xo", "prettier"],
	"overrides": [
		{
			"extends": ["xo-typescript"],
			"files": ["*.ts", "*.tsx"]
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": ["react", "eslint-plugin-react", "react-hooks", "@typescript-eslint", "prettier"],
	"rules": {
		"react/react-in-jsx-scope": "off",
		"no-unused-vars": "error",
		"react/no-array-index-key": "error",
		"no-duplicate-imports": "warn"
	}
}
